{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Algorithm Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/algorithm/build/test/dijkstra_test",
            "args": [
                "${workspaceFolder}/algorithm/resources/tinyEWD.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "pretty print",
                    "text": "-enable-pretty-print",
                    "ignoreFailures": true
                }
            ]
            //"preLaunchTask": "C/C++: bash"
        },
    ]
}